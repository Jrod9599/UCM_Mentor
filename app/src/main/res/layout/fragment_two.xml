<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jonathan.ucmmentor.TwoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/editText8"
            android:text="Success Mentor Program Timeline"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#176cd3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText9"
            android:text="Below is a brief history of the program's progress since 2007.\n"
            android:layout_below="@+id/editText8"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText10"
            android:text="2007-2008"
            android:layout_below="@+id/editText9"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText11"
            android:text="Funded by a Title V Grant through the U.S. Department of Education, the Peer Mentoring Program was established through the Center for Research on Teaching Excellence. Twenty-nine mentors served more than 100 mentees.\n"
            android:layout_below="@+id/editText10"
            android:textColor="#176cd3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText12"
            android:layout_below="@+id/editText10"
            android:text="2008-2009"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText13"
            android:layout_below="@+id/editText11"
            android:text="With support of UC Merced's Summer Bridge Program, 29 mentors served 206 mentees.\n"
            android:textColor="#176cd3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText14"
            android:layout_below="@+id/editText12"
            android:text="2009-2010" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText15"
            android:text="36 mentors mentored 274 mentees\n"
            android:layout_below="@+id/editText13"
            android:textColor="#176cd3"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText16"
            android:layout_below="@+id/editText14"
            android:text="2010-2011"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText17"
            android:text="38 mentors mentored 215 mentees\n"
            android:layout_below="@+id/editText16"
            android:textColor="#176cd3"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText18"
            android:layout_below="@+id/editText17"
            android:text="2011-2012"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText19"
            android:text="Now situated within the Calvin E. Bright Success Center, and funded in part by a gift from the Bright Foundation, the program was scaled back to 12 mentors who mentored about 60 mentees.\n"
            android:layout_below="@+id/editText18"
            android:textColor="#176cd3"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText20"
            android:layout_below="@+id/editText19"
            android:text="2012-2013"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText21"
            android:text="After undergoing a revision process, the program was renamed to the Success Mentor Program. Twenty-three mentors served 140 mentees.\n"
            android:layout_below="@+id/editText20"
            android:textColor="#176cd3"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText22"
            android:layout_below="@+id/editText21"
            android:text="2013-2014"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText23"
            android:text="The past academic year, 33 mentors mentored 216 mentees.\n"
            android:layout_below="@+id/editText22"
            android:textColor="#176cd3"
            android:layout_alignParentStart="true" />

    </LinearLayout>
</ScrollView>


</RelativeLayout>
